<div class="row">
    <div class="span12">
        <div class="event-title">
            <h2><%= @event.title %></h2>
        </div>
    </div>
</div>
<div class="row">
    <div class="span5">
        <div class="event-description">
            <%= @event.description %>
            <br><%= distance_of_time_in_words_to_now @event.due_at %> left
        </div>
        <div class="event-members">
            <% if @members.any? %>
              <ul class="member-list-styling">
                <%= render @members %>
              </ul>
            <% else %>
              There are no members. Add some!
            <% end %>
        </div>
    </div>
    <div class="span7">
        <div class="event-chat">
            Chat here
        </div>
    </div>
</div>