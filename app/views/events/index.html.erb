<% provide(:title, "Your Events") %>
<div class="row">
  <div class="span9">
    <div class="page-header">
      <h2>Your Organized Events</h2>
    </div>
  </div>
  <div class="span3">
    <% if !current_user.stub? %>
      <%= link_to "New event", new_event_path, class: "btn btn-primary push-top pull-right" %>
    <% end %>
  </div>
</div>
<div class="row">
  <%= render @organized_events %>
</div>
<div class="row">
  <div class="span12">
    <div class="page-header">
      <h2>Events You're Invited To</h2>
    </div>
  </div>
</div>
<div class="row">
  <%= render @invited_events %>
</div>