<div class="event span3">
  <div class="well">
    <h4 style="margin-top: 0;">
        <%= link_to event.title, event %>
        <% if event.public? %>
            <i class="icon-globe"></i>
        <% else %>
            <i class="icon-lock"></i>
        <% end %>
    </h4>
    <%= event.members.count %> members<br />
    <% if defined? locals[:past_event] %>
        Started at <%= event.start_at %>
    <% else %>
        Starts at <%= event.start_at %>
    <% end %>
  </div>
</div>