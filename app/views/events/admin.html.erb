<% provide(:title, "#{@event.title} Dashboard") %>
<div class="row">
  <div class="span8">
    <div class="page-header">
      <h2>
        <%= @event.title %> Dashboard
      </h2>
    </div>
  </div>
  <div class="span4">
  	<%= link_to "Edit event", edit_event_path(@event), class: "btn btn-primary pull-right push-top" %>
  	<%= link_to "View event", event_path(@event), class: "btn btn-primary pull-right push-top push-right" %>
  </div>
</div>
<div class="row">
  <div class="span8">
    <h3>Event Members</h3>
    <table class="table table-striped table-bordered">
      <tr>
        <th>Name</th>
        <th>Paid</th>
        <th>Last Seen</th>
        <th>Actions</th>
      </tr>
      <%= render collection: @event.paying_members, partial: "users/event_user", as: :user %>
    </table>
  </div>
  <div class="span4">
    <h3>Collection Progress</h3>
    <div class="progress">
      <div class="bar" style="width: <%= @event.paid_percentage %>%;"></div>
    </div>
  </div>
</div>