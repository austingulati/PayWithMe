<div class="row">
  <div class="span3">
    <div class="well">
      <%= image_tag avatar_url(@user) %>
    </div>
    <h2><%= @user.name %> <small>(<%= @user.username %>)</small></h2>
  </div>
  <div class="span5">
    &nbsp;
  </div>
  <% if current_user != @user %>
    <div class="span4">
      <div class="well sidebar-nav">
        <% if current_user.friends_with?(@user) %>
          <%= link_to "Friends <i class=\"icon-ok\"></i>".html_safe, "#", class: "btn btn-primary btn-block disabled push-bottom" %>
        <% elsif current_user.friends_sent?(@user) %>
          <%= link_to "Friend Request Sent", "#", class: "btn btn-primary btn-block disabled push-bottom" %>
        <% elsif current_user.friends_received?(@user) %>
          <%= link_to "Accept Friend Request?", accept_friend_user_path(@user), class: "btn btn-success btn-block push-bottom pull-left" %>
          <%= link_to "Deny Friend Request?", deny_friend_user_path(@user), class: "btn btn-danger btn-block push-bottom pull-right" %>
        <% else %>
          <%= link_to "Add Friend", friend_user_path(@user), class: "btn btn-primary btn-block push-bottom" %>
        <% end %>
        <form method="post" action="">
          <div class="input-prepend pull-left">
            <span class="add-on">$</span><input type="text" class="span2" placeholder="Enter Amount" />
          </div>
          <input type="submit" class="btn pull-right" value="Request Payment" />
          <div class="clearfix"></div>
        </form>
      </div>
    </div>
  <% end %>
</div>