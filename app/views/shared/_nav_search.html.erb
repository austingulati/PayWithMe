<%= form_tag(search_users_path, { method: :post, class: "navbar-search pull-left", id: "search-form" }) do %>
  <div class="pull-left">
    <input type="text" class="search-query span4" id="search-friends" name="name" placeholder="Search for friends or other users" autocomplete="off" />
  </div>

  <div class="dropdown pull-left" id="navbar-notifications">
    <a class="dropdown-toggle" id="dropdown-notifications" data-toggle="dropdown" href="#">
      <i class="icon-globe"></i>
      <% if current_user.has_unread_notifications? %>
        <div class="unread-notifications-count">
          <%= current_user.unread_notifications.count %>
        </div>
      <% end %>
    </a>
    
    <ul class="dropdown-menu" role="menu">
      <% current_user.current_notifications.each do |notification| %>
        <li <%= 'class="unread"'.html_safe unless notification.read? %>><a href="<%= notification.url %>"><%= notification.body %></a></li>
      <% end %>

      <% if current_user.current_notifications.empty? %>
        <li><a href="#">You have no notifications</a></li>
      <% else %>
        <li><%= link_to "View all notifications", notifications_path %></li>
      <% end %>
    </ul>
  </div>
<% end %>