<% provide(:title, "Added Contacts") %>

<% content_for(:wrapper_top) do %>
  <div class="container">
    <div class="row">
      <div class="span12">
        <div class="page-header">
          <h2>
            Added Contacts
          </h2>
        </div>
      </div>
    </div>
  </div>
<% end %>

<div class="container">
  <div class="row">
    <div class="span12">
      <div class="well">
        <%= params %>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="span12">
      <div class="well">
        <p>
          Added <%= @contacts.size %> contacts!
        </p>
        <% @contacts.each do |contact| %>
          <p>
            name is: <%= contact[1].split(",")[0] %>,
            email is: <%= contact[1].split(",")[1] %>
          </p>
        <% end %>
      </div>
    </div>
  </div>
</div>